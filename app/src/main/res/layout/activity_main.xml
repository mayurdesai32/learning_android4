<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	tools:context=".MainActivity"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="48dp"
		android:orientation="vertical">
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Contact name"
			android:inputType="textCapWords"
			android:id="@+id/edit_text_contact"/>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:hint="Contact number"
			android:inputType="phone"
			android:id="@+id/edit_text_contact_number"/>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:hint="Display name"
			android:inputType="textCapWords"
			android:id="@+id/edit_display_contact"/>
		<CheckBox
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="Include junior"
			android:id="@+id/checkbox_junior"/>
		<Spinner
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			tools:listitem="@layout/support_simple_spinner_dropdown_item"
			android:id="@+id/spinner_job_title"/>
		<CheckBox
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="Immediate start"
			android:id="@+id/checkbox_immediate_start"/>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:hint="Available from date"
			android:inputType="date"
			android:id="@+id/edit_text_start_date"/>
		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			style="@style/Widget.AppCompat.Button.Colored"
			android:text="Preview Message"
			android:id="@+id/button_preview"/>
	</LinearLayout>
</ScrollView>
